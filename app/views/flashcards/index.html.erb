<div class="row-fluid">
	<div class="span12">
		<h2><%=t :flashcards%></h2>
		<p><%=t :flashcard_description%></p>
	</div>
</div>
<div class="row-fluid">
	<div class="span4">
		<%= render "card", :flashcard => @flashcard %>
	</div>
	<div class="span8">
		<table class="table table-hover table-condensed">
			<thead>
				<tr>
					<th>Korean</th>
					<th>English</th>
					<th>Level</th>
					<th>Sentence</th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% @flashcards.each do |flashcard| %>
				<tr>
					<td><%= flashcard.word.korean %></td>
					<td><%= flashcard.word.translations.first.english %></td>
					<td><%= flashcard.level %></td>
					<td><%= 
					if flashcard.word.example_sentences.first
						flashcard.word.example_sentences.first.korean
					end %></td>
					<td><%= link_to 'Show', flashcard %></td>
					<td><%= link_to 'Edit', edit_flashcard_path(flashcard) %></td>
					<td><%= link_to 'Destroy', flashcard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				</tr>
				<% end %>
			<tbody>
		</table>
	</div>
</div>
<div class="row-fluid">
	<div class="span12">
		<p>This is the foundation, enjoy</p>
	</div>
</div>
<%= render "grammar/this" %>